temperature = float(input("Enter temperature:"))
unit = int(input("Enter (1) for Celsius and (2) for Fahrenheit:"))

if unit == 1:
    temp_fahrenheit = (9*temperature)/5 + 32
    print("Temperature in Fahrenheit:", round(temp_fahrenheit, 2),
          'F')
else:
    print("Temperature in Celsius:", round((temperature-32) * 5 / 9, 2), 'C')
